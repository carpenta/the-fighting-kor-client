<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:gravity="center"
              android:layout_margin="6dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ImageView
            android:id="@+id/game_player_image"
            android:layout_width="100dp"
            android:layout_height="130dp"
            android:src="@drawable/grade_white"/>

    <TextView
            android:id="@+id/game_player_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="player name"/>

    <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:id="@+id/game_player_assoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="player assoc"/>

    <TextView
            android:textSize="17dp"
            android:gravity="center"
            android:id="@+id/game_player_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="player etc"/>
</LinearLayout>
